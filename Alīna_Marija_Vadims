import random

# Funkcija lietotāja vārda ievadei
def iegut_vardu():
    return input("Kā tevi sauc? ")

# Funkcija komplimenta ģenerēšanai
def dot_komplimentu(vards):
    komplimenti = [
        f"{vards}, tu izskaties lieliski!",
        f"{vards}, tev ir fantastisks prāts!",
        f"{vards}, šodien tu esi izcils!",
        f"{vards}, tu esi gudrs un talantīgs!"
    ]
    print(random.choice(komplimenti))


}

# Funkcija testam
def biologijas_tests():
    vards = iegut_vardu()
    dot_komplimentu(vards)

    print("\nTagad daži jautājumi par bioloģiju:")
    pareizas_atbildes = 0

    for jautajums, pareiza_atbilde in jautajumi.items():
        atbilde = input(f"{jautajums} ").lower()
        if atbilde == pareiza_atbilde:
            print("Pareizi!")
            pareizas_atbildes += 1
        else:
            print(f"Nepareizi. Pareizā atbilde ir: {pareiza_atbilde}")

    print(f"\n{vards}, tu atbildēji pareizi uz {pareizas_atbildes} jautājumiem no {len(jautajumi)}!")

# Programmas palaišana
biologijas_tests()
